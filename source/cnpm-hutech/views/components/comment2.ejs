<div class="container">
  <div class="row">
    <div class="col-md-8">
      <h2 class="page-header">Comments</h2>
        
        <div class="panel post comment-bg">
            <form id="submit" method="post" action="post/comment">
                <div class="post-description">
                    <div id="summernote"></div>
                    <input type="hidden" id="cmm" name="comment"><br>
                     <input type="hidden" id="pid" name="pid" value="<%= id %>">
                    <div class="stats">
                        <button type="submit" class="btn btn-default stat-item">
                            <i class="fa fa-thumbs-up icon"></i>Post
                        </button>
                        <a class="btn btn-default stat-item">
                            <i class="fa fa-thumbs-down icon"></i>Cancel
                        </a>
                    </div>
                </div>
                
            </form>
        </div>
        
          <% comments.forEach(function(comment) { %>
            
          <div class="panel panel-white post panel-shadow">
                <div class="post-heading">
                    <div class="pull-left image">
                        <img src="https://secure.gravatar.com/avatar/<%= hex_md5(comment.UMAIL) %>?size=150" class="img-circle avatar" alt="user profile image">
                    </div>
                    <div class="pull-left meta">
                        <div class="title h5">
                            <b><%= comment.UNAME %></b>
                        </div>
                        <h6 class="text-muted time"><%= formatTime(comment.CDATE) %></h6>
                    </div>
                </div> 
                <div class="post-description"> 
                    <p><%= comment.CCOMMENT %></p>
                    <div class="stats">
                        <a class="btn btn-default stat-item">
                            <i class="fa fa-thumbs-up icon"></i><%= comment.CVOTEUP %>
                        </a>
                        <a class="btn btn-default stat-item">
                            <i class="fa fa-thumbs-down icon"></i><%= comment.CVOTEDOWN %>
                        </a>
                    </div>
                </div>
            </div>
         
            <% }) %>
        
        <hr >
        <% include credit.ejs %>
        
    </div>
  </div>
</div>